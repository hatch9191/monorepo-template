{
  "extends": "@repo/typescript-config/base.json",
  "exclude": ["node_modules"],
  "include": ["."],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/__mocks__/*": ["./src/__mocks__/*"],
      "@/context/*": ["./src/context/*"],
      "@/constants/*": ["./src/constants/*"],
      "@/graphql/*": ["./src/graphql/*"],
      "@/helpers/*": ["./src/helpers/*"],
      "@/modules/*": ["./src/modules/*"],
      "@/prisma/*": ["./src/prisma/*"],
      "@/types/*": ["./src/types/*"]
    }
  }
}
