{
  "extends": "@repo/typescript-config/base.json",
  "include": ["."],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/__mocks__/*": ["src/__mocks__/*"],
      "@/clients/*": ["src/clients/*"],
      "@/context/*": ["src/modules/context/*"],
      "@/constants/*": ["src/constants/*"],
      "@/graphql/*": ["src/graphql/*"],
      "@/helpers/*": ["src/helpers/*"],
      "@/modules/*": ["src/modules/*"],
      "@/prisma/*": ["src/clients/prisma/*"],
      "@/types/*": ["src/types/*"]
    }
  }
}
